canvas(id='stream')
div(id="message")
script
  var socket = io.connect('/client');
  var canvas = document.getElementById('stream');
  var context = canvas.getContext('2d');
  var video_image = new Image();
  var first=true;  
  function onFrame(data){
    video_image.src = data;
    video_image.onload = function(){
      context.drawImage(video_image, 100, 100);
    }
  }

  socket.on('frame', function(data){onFrame(data);});
  socket.on('reload',function(){if(first){first=false;}else{location.reload()}});
